@import 'variables'

:host
  min-height 100vh
  display flex
  flex-direction column

.name
  padding-left .5em

mat-sidenav-container
  flex-grow 1

.nav-link
  color black
  display block
  font-weight 500
  font-size 16px !important
  margin 1rem
  text-decoration none
  text-transform uppercase
  transition: color 0.2s ease;

  &:hover
    color $ss-mat-accent !important

  &.active
    color $ss-mat-primary

.content
  margin 0 5%
  padding-top 1rem
