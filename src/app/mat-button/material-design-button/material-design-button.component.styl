.material-design-button
  font-size 40px
  padding .5em
  -webkit-appearance none
  font-weight lighter
  cursor pointer
  color darkblue
  background azure
  border-radius 5px
  position relative
  border 0
  outline 0
  overflow hidden
  z-index 1
  box-shadow 0 3px 1px -2px rgba(0,0,0,.2),
             0 2px 2px 0 rgba(0,0,0,.14),
            0 1px 5px 0 rgba(0,0,0,.12);
  transition box-shadow 280ms cubic-bezier(.4,0,.2,1);

.material-design-button:active
  box-shadow 0 5px 5px -3px rgba(0,0,0,.2),
             0 8px 10px 1px rgba(0,0,0,.14),
             0 3px 14px 2px rgba(0,0,0,.12);

.ripple-container
  position absolute
  top 0
  bottom 0
  left 0
  right 0

.ripple
  border-radius 50%
  position absolute
  transform scale(0)
  top 0px
  left 0px
  transition all .4s cubic-bezier(.25,.8,.25,1)
  z-index -1
  background hsla(196, 89%, 50%, 0.41)
