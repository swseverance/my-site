.box-1,
.box-2,
.box-3
  margin 0 1em 1em 0

.box-1,
.box-2
  > *:not(:last-child)
    margin-bottom 1em

h4
  margin 0

.mat-radio-group
  .mat-radio-button
    display block
    margin 0.5em 0

    &:(last-child)
      margin-bottom 0

.element
  color white
  opacity 0.7
  text-align center

.block
  background-color magenta
  display block

.inline
  background-color orange
  display inline

.inline-block
  background-color blue
  display inline-block
